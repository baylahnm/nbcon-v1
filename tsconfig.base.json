{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["apps/web/src/app/*"],
      "@components/*": ["apps/web/src/components/*"],
      "@ai/*": ["apps/web/src/ai/*"],
      "@shared/*": ["apps/web/src/shared/*"],
      "@services/*": ["apps/web/src/shared/services/*"]
    },
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  }
}
