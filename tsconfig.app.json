{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["./src/pages/1-HomePage/others/components"],
      "@/lib": ["./src/pages/1-HomePage/others/lib"],
      "@/stores": ["./src/pages/1-HomePage/others/stores"],
      "@/types": ["./src/pages/1-HomePage/others/types"],
      "@/utils": ["./src/pages/1-HomePage/others/utils"],
      "@/integrations": ["./src/pages/1-HomePage/others/integrations"]
    }
  },
  "include": ["src"]
}
