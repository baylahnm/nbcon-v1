{
  "manifest_version": 3,
  "name": "NBCON Cursor Dev Tools",
  "version": "1.0.0",
  "description": "Development tools and debugging utilities for NBCON Cursor extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "devtools_page": "devtools.html",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "debugger",
    "devtools"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

